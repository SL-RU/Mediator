<UserControl x:Class="Mediator.SQLiteDB.SqLiteDbConnector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Mediator.SQLiteDB"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Background="White">
    <Grid>
        <TextBox x:Name="Path" Height="23" TextWrapping="Wrap" Text="D:\tmp\db" VerticalAlignment="Top" Margin="0,10,70,0"/>
        <Button x:Name="button" Content="Button" Margin="0,10,0,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="70" Height="23" Click="button_Click"/>
        <Button x:Name="create" Content="Create" HorizontalAlignment="Left" Margin="78,78,0,0" VerticalAlignment="Top" Width="75" Click="create_Click"/>
        <Button x:Name="connect" Content="Connect" HorizontalAlignment="Left" Margin="183,78,0,0" VerticalAlignment="Top" Width="75" Click="connect_Click"/>
        <Button x:Name="disconnect" Content="Disconnect" HorizontalAlignment="Left" Margin="88,159,0,0" VerticalAlignment="Top" Width="75" Click="disconnect_Click"/>

    </Grid>
</UserControl>
