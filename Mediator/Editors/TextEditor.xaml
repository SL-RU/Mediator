<UserControl x:Class="Mediator.Editors.TextEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Mediator.Editors"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Background="White" Loaded="UserControl_Loaded">
    <Grid x:Name="grid">
        <TextBlock x:Name="textBlock" Margin="47,0,0,0" TextWrapping="Wrap" Text="{Binding Id}" VerticalAlignment="Top"/>
        <TextBlock x:Name="textBlock1" HorizontalAlignment="Left" TextWrapping="Wrap" Text="ID:" VerticalAlignment="Top" Width="42" Height="16"/>
        <TextBlock x:Name="textBlock1_Copy" HorizontalAlignment="Left" TextWrapping="Wrap" Text="ID:" VerticalAlignment="Top" Width="42" Height="16" Margin="0,35,0,0"/>
        <TextBox x:Name="textBox" Height="23" Margin="42,34,0,0" TextWrapping="Wrap" Text="{Binding Text}" VerticalAlignment="Top"/>
        <Button x:Name="save" Content="Save" HorizontalAlignment="Left" Margin="90,69,0,0" VerticalAlignment="Top" Width="75" Click="save_Click"/>
        <Button x:Name="revert" Content="Revert" HorizontalAlignment="Left" Margin="10,69,0,0" VerticalAlignment="Top" Width="75" Click="revert_Click"/>

    </Grid>
</UserControl>
