<UserControl x:Class="Mediator.elements.TextDataElement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Mediator.elements"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Background="{DynamicResource TextsDbTabColor}">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="8"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="text" TextWrapping="Wrap" Text="{Binding Text}"/>
        <TextBlock x:Name="status_field" Margin="0" Grid.Row="1" TextWrapping="Wrap" Text="TextBlock" FontSize="6"/>
    </Grid>
</UserControl>
