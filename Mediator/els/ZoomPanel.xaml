<UserControl x:Class="Mediator.els.ZoomPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Mediator.els"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid x:Name="parent" Background="#FF111111" MouseDown="parent_MouseDown" MouseMove="parent_MouseMove" MouseUp="parent_MouseUp" MouseWheel="parent_MouseWheel" MouseLeave="parent_MouseLeave" RenderTransformOrigin="0,0">
        <Label x:Name="label" Content="{Binding Zoom}" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="White" FontSize="11" FontFamily="Segoe UI Light" Padding="0"/>
        <Canvas x:Name="canvas" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Canvas.LayoutTransform>
                <ScaleTransform x:Name="canvas_st" />
            </Canvas.LayoutTransform>
            <Canvas.RenderTransform>
                <TranslateTransform x:Name="canvas_tt"/>
            </Canvas.RenderTransform>
            <Ellipse Fill="#FFF4F4F5" Height="2" Stroke="Black" HorizontalAlignment="Center" VerticalAlignment="Center" Width="2" Margin="-1,-1,0,0"/>
        </Canvas>

    </Grid>
</UserControl>
